<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/tab_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/tabs_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_button_study"
                style="@style/tab_button_bottom"
                android:layout_marginTop="2.0dip"
                android:checked="true"
                android:drawableTop="@drawable/account01"
                android:text="学习进度" />

            <RadioButton
                android:id="@+id/radio_button_score"
                style="@style/tab_button_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/account02"
                android:text="考试成绩" />

            <RadioButton
                android:id="@+id/radio_button_certificate"
                style="@style/tab_button_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/account03"
                android:text="证书发放" />

            <RadioButton
                android:id="@+id/radio_button_fee"
                style="@style/tab_button_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/account04"
                android:text="费用缴纳" />

            <RadioButton
                android:id="@+id/radio_button_more"
                style="@style/tab_button_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/account05"
                android:text="更多" />
        </RadioGroup>
    </LinearLayout>

</TabHost>